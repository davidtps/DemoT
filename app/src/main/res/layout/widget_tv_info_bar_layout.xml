<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_source_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/popup_info_bar"
        android:orientation="vertical"
        android:paddingStart="21dp"
        android:paddingEnd="21dp">

        <RelativeLayout
            android:id="@+id/simple_source_layout_first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center|start">

            <TextView
                android:id="@+id/img_source"
                style="@style/TextAppearance.XLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:textColor="@color/SELECTED" />

            <TextView
                android:id="@+id/txt_source_blank"
                style="@style/TextAppearance.XLarge"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/img_source"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/SELECTED"
                android:textDirection="locale" />

            <TextView
                android:id="@+id/txt_source_space"
                style="@style/TextAppearance.XLarge"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/txt_source_blank"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/SELECTED"
                android:textDirection="locale"
                tools:text="source" />

            <!--<ImageView-->
            <!--android:id="@+id/banner_source_lock_icon"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:layout_marginStart="12dp"-->
            <!--android:layout_toEndOf="@id/txt_source_name"-->
            <!--android:gravity="center"-->
            <!--android:scaleType="fitXY"-->
            <!--android:visibility="gone" />-->

            <TextView
                android:id="@+id/banner_tuner_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/txt_source_blank"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Antenna"
                android:textColor="@color/NORMAL"
                android:textDirection="locale"
                android:textSize="15sp"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/banner_name"
            style="@style/TextAppearance.XLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:includeFontPadding="false"
            android:textColor="@color/SELECTED"
            tools:text="banner_name"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/banner_simple_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="15dp"
            android:includeFontPadding="false"
            android:textColor="@color/NORMAL"
            android:textDirection="locale"
            tools:text="banner_simple_time"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>